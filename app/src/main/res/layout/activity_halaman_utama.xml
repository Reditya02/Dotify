<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HalamanUtama"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="238dp"
        android:layout_marginBottom="73dp"
        android:src="@drawable/logo"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="349dp"
        android:layout_height="69dp"
        android:id="@+id/JadwalSaya"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/biru_tengah_kedua"
        android:text="Jadwal Saya"
        android:textAllCaps="false"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/biru_muda"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="349dp"
        android:layout_height="69dp"
        android:id="@+id/Pengingat"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/biru_tengah_kedua"
        android:layout_marginVertical="48dp"
        android:text="Pengingat"
        android:textAllCaps="false"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/biru_muda"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="349dp"
        android:layout_height="69dp"
        android:id="@+id/TipsDanTrik"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/biru_tengah_kedua"
        android:text="Tips dan Trik"
        android:textAllCaps="false"
        android:fontFamily="@font/worksans_semibold"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/biru_muda"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Dotify"
            android:fontFamily="@font/poetsenone_regular"
            android:textSize="48sp"
            android:layout_marginBottom="54dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>